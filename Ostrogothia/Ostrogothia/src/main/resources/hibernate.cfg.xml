<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>  
        <property name="hibernate.connection.password">1408007</property>  
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ostrogothia</property>  
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>  
        <property name="show_sql">true</property>   
        <property name="connection.pool_size">1</property>    
        <mapping class="com.mycompany.ostrogothia.model.AuthorYear" />
        <mapping class="com.mycompany.ostrogothia.model.Documents"/>
        <mapping class="com.mycompany.ostrogothia.model.Monuments" />
        <mapping class="com.mycompany.ostrogothia.model.Publications"/>
    </session-factory>
</hibernate-configuration>